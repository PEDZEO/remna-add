# =============================================================================
# REMNAWAVE TELEGRAM BOT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Remnawave API Configuration
# For Docker deployment, use internal container name
API_BASE_URL=https://panel.remnawave.ru/api
# For external deployment, use your actual domain  
# API_BASE_URL=https://your-remnawave-panel.com/api
REMNAWAVE_API_TOKEN=your_api_token_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Admin User IDs (comma-separated list of Telegram user IDs)
# Get your Telegram user ID by messaging @userinfobot
ADMIN_USER_IDS=123456789,987654321

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Logging Level (ERROR, WARNING, INFO, DEBUG)
# For production use ERROR, for development use DEBUG
LOG_LEVEL=ERROR

# Environment (production, development, testing)
ENVIRONMENT=production

# =============================================================================
# DASHBOARD DISPLAY SETTINGS
# =============================================================================

# Control which information sections are displayed on the main screen
DASHBOARD_SHOW_SYSTEM_STATS=true      # Show system information (CPU, RAM, Uptime)
DASHBOARD_SHOW_SERVER_INFO=true       # Show server information
DASHBOARD_SHOW_USERS_COUNT=true       # Show user statistics
DASHBOARD_SHOW_NODES_COUNT=true       # Show node count
DASHBOARD_SHOW_TRAFFIC_STATS=true     # Show traffic statistics
DASHBOARD_SHOW_UPTIME=true            # Show system uptime

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================

# User search functionality settings
ENABLE_PARTIAL_SEARCH=true            # Enable partial name matching in user search
SEARCH_MIN_LENGTH=2                   # Minimum search query length

# =============================================================================
# DOCKER CONFIGURATION (if using Docker)
# =============================================================================

# These are automatically set by Docker Compose
# PYTHONUNBUFFERED=1

# =============================================================================
# EXAMPLE VALUES
# =============================================================================
# API_BASE_URL=https://panel.example.com/api
# REMNAWAVE_API_TOKEN=rmn_1234567890abcdef1234567890abcdef
# TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# ADMIN_USER_IDS=123456789,987654321
# LOG_LEVEL=ERROR
# ENVIRONMENT=production
